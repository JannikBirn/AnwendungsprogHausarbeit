<Page x:Class="De.HsFlensburg.ClientApp012.Ui.Desktop.LearningCardWindows.LearningCardAnswerPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:De.HsFlensburg.ClientApp012.Ui.Desktop.LearningCardWindows"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="800"
      Title="LearningCardAnswerPanel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Label Content="Question:" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="0"  FontFamily="Roboto" Foreground="#FF707070" FontSize="36" />
        <Button x:Name="btn_right" Content="Right" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="74" Height="56" Margin="255,33,471,32"/>
        <Image HorizontalAlignment="Left" Height="196" Grid.Row="1" VerticalAlignment="Top" Width="280" Margin="276,10,0,0"/>
        <MediaElement HorizontalAlignment="Center" Height="215" Grid.Row="1" VerticalAlignment="Center" Width="315" Margin="255,10,230,30"/>
        <Label Content="Answer:" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"  FontFamily="Roboto" Foreground="#FF707070" FontSize="36" Margin="319,10,319,0" />
        <MediaElement HorizontalAlignment="Center" Height="289" Grid.Row="2" VerticalAlignment="Center" Width="396"/>
        <Image HorizontalAlignment="Left" Height="270" Grid.Row="2" VerticalAlignment="Top" Width="372" Margin="222,68,0,0"/>
        <Button x:Name="btn_wrong" Content="Wrong" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="74" Height="56" Margin="482,33,244,32" />
        <Label x:Name="l_question" Content="Label" HorizontalAlignment="Left" Margin="237,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="204" Width="357" FontFamily="Roboto" FontSize="16" Foreground="#FF707070"/>
        <Label x:Name="l_answer" Content="Label" HorizontalAlignment="Left" Margin="199,58,0,0" Grid.Row="2" VerticalAlignment="Top" Height="289" Width="399" FontFamily="Roboto" FontSize="16" Foreground="#FF707070"/>
    </Grid>
</Page>
