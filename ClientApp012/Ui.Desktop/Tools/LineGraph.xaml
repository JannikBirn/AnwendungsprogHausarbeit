<UserControl x:Class="De.HsFlensburg.ClientApp012.Ui.Desktop.Tools.LineGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:De.HsFlensburg.ClientApp012.Ui.Desktop.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <Binding Path="LineGraphVM" Source="{StaticResource ViewModelLocator}"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" MinWidth="20" MaxWidth="40"></ColumnDefinition>
            <ColumnDefinition Width="0.05*" MinWidth="20" MaxWidth="40"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.05*" MinHeight="20" MaxHeight="40"></RowDefinition>
            <RowDefinition Height="0.05*" MinHeight="20" MaxHeight="40"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        
        <Canvas Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
         
        <Label Grid.Column="0" Grid.Row="0" Content="%" HorizontalAlignment="Right"  VerticalAlignment="Top"/>
        <Label Grid.Column="0" Grid.Row="0" Content="%" HorizontalAlignment="Right"  VerticalAlignment="Bottom"/>


        <ItemsControl Name="verticalNumbers"  Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Path=HorizontalNumbers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>



    </Grid>
</UserControl>
