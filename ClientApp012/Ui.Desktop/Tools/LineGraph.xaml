<UserControl x:Class="De.HsFlensburg.ClientApp012.Ui.Desktop.Tools.LineGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:De.HsFlensburg.ClientApp012.Ui.Desktop.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styleguide.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <Binding Path="LineGraphVM" Source="{StaticResource ViewModelLocator}"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" MinWidth="15" MaxWidth="20"></ColumnDefinition>
            <ColumnDefinition Width="0.05*" MinWidth="15" MaxWidth="20"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.05*" MinHeight="25" MaxHeight="40"></RowDefinition>
            <RowDefinition Height="0.05*" MinHeight="25" MaxHeight="40"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        
        <Canvas Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Viewbox Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Right"  VerticalAlignment="Top">
            <Label  Content="%" Style="{StaticResource DefaultLabel}"/>
        </Viewbox>        


        <ItemsControl Name="verticalNumbers"  Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Path=HorizontalNumbers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Viewbox>
                        <Label Content="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource DefaultLabel}"/>
                    </Viewbox>                    
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Viewbox  Grid.Column="3" Grid.Row="3" HorizontalAlignment="Right"  VerticalAlignment="Bottom" >
            <Label Content="date" Style="{StaticResource DefaultLabel}"/>
        </Viewbox>        

        <ItemsControl Name="horizontalNumbers"  Grid.Column="2" Grid.Row="1" ItemsSource="{Binding Path=HorizontalNumbers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Viewbox>
                        <Label Content="{Binding}" VerticalAlignment="Top" HorizontalAlignment="Center"  Style="{StaticResource DefaultLabel}"/>
                    </Viewbox>                     
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>



    </Grid>
</UserControl>
