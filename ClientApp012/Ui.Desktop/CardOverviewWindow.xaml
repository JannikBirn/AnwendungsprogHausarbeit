<Window x:Class="De.HsFlensburg.ClientApp012.Ui.Desktop.CardOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp012.Ui.Desktop"
        xmlns:viewmodel="clr.namespace:De.HsFlensburg.ClientApp012.Logic.Ui.ViewModels"
        mc:Ignorable="d"
        Title="CardOverviewWindow" Height="1024" Width="786"
        x:Name="myCardOverviewWindow">
    <Window.Resources>
        <ResourceDictionary>
            <!--  <viewmodel:CardOverViewWindowViewModel x:Key="" ></viewmodel:CardOverViewWindowViewModel> -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styleguide.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <Binding  Source="{StaticResource ViewModelLocator}" Path="CardOverViewWindowVM"/>
    </Window.DataContext>
    <Grid Style="{DynamicResource DefaultGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="8.5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Label Content="Card Overview" Grid.Column="1" VerticalAlignment="Center" Style="{DynamicResource TitleLabelStyle}" />
        <Button Content="Back" VerticalAlignment="Center" Command="{Binding CloseWindow}" 
                CommandParameter="{Binding ElementName=myCardOverviewWindow}" Style="{DynamicResource BackButton}" Margin="30,36,0,33" Width="78"/>

        <DataGrid x:Name="allTopics" Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Path=RootViewModel.TopicCollection}" AutoGenerateColumns="False"
                  Background="#FF202225">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Topic" MinWidth="200"/>
            </DataGrid.Columns>

        </DataGrid>

        <DataGrid x:Name="allCards" Grid.Column="2" Grid.Row="1" ItemsSource="{Binding ElementName=allTopics, Path=SelectedItem}" AutoGenerateColumns="False"
                  SelectionUnit="CellOrRowHeader" Background="#FF202225" >
            <!-- CellOrRowHeader allows to select full Row or just a single Cell -->
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Count}" Width="auto" Header="Number" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding QuestionText}" Width="auto" MaxWidth="200" Header="Question" IsReadOnly="True"/>
                <DataGridTextColumn  Binding="{Binding AnswerText}" Width="auto" MaxWidth="200" Header="Answer" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Left"  LastChildFill="False" VerticalAlignment="Top" Width="620" Height="auto">
            <Menu Background="{x:Null}" Width="620" Height="auto" VerticalAlignment="Top">

                <Button Content="Test Print" Name="PrintSimpleTestButton" DockPanel.Dock="Top"  Width="240" Height="40" 
                        Style="{DynamicResource DefaultButtonStyle}"
                        Command="{Binding PrintTestPage}"/>

                <Button Content="Print All Cards" DockPanel.Dock="Top"  Width="240" Height="40" Style="{DynamicResource DefaultButtonStyle }" 
                        Command="{Binding PrintCards}" CommandParameter="{Binding ElementName=allCards}"/>
                <Button Content="Print Selected Cards" DockPanel.Dock="Bottom"  Width="240" Height="40" Style="{DynamicResource DefaultButtonStyle }"/>
                <Button Content="Print Window" DockPanel.Dock="Bottom"  Width="240" Height="40" Style="{DynamicResource DefaultButtonStyle }"
                        Command="{Binding PrintWindow}" CommandParameter="{Binding ElementName=myCardOverviewWindow, Mode=OneWay}"/>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
