<Window x:Class="De.HsFlensburg.ClientApp012.Ui.Desktop.VideoInspectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp012.Ui.Desktop"
        mc:Ignorable="d"
        Title="VideoInspectWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <MediaElement Source="HIER DEN PATH DER DATEI" Name="wmp" Stretch="None" />
        <StackPanel Grid.Row="1">
            <WrapPanel HorizontalAlignment="Center">
                <Button Name="stopButton" Margin="10,0"  Click="stop_Click">Stop</Button>
                <Button Name="playButton" Margin="10,0" Click="play_Click">Play</Button>
                <Button Name="pauseButton" Margin="10,0" Click="pause_Click">Pause</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
